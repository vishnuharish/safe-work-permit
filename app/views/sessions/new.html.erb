    <div class="col-4 my-5 mx-auto border p-4 rounded shadow-lg p-3 mb-5 mt-5 bg-white">
        <%= form_tag '/login' do %>
            <div class="form-group row">   
                <%= label_tag "email", "Email", class: "col-2 col-form-label text-right"%>
                <div class="col">
                    <%= text_field_tag :email, nil,{class: "form-control col"} %>
                </div>
            </div>
            <div class="form-group row">
                <%= label_tag "password", "Password", class: "col-2 col-form-label text-right"%> 
                <div class="col">
                    <%= password_field_tag :password, nil , {class: "form-control col"}%>
                </div>  
            </div>
            <div class="col-2 mx-auto">
                <%= submit_tag "Login", {class: "btn btn-md btn btn-outline-primary"} %>
            </div>
        <% end %>
    </div>